@model IEnumerable<StudentInfoUpdate.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Active Students</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Student" asp-action="Index">
    <p>
        <p>You may search by Name, Surname, or Student Number</p>
        <input type="text" name="SearchString">
        <input type="submit" value="Filter" />


    </p>
</form> 
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Student Number")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Surname")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Address")
        </th>
        <th>
            @Html.DisplayName("Mobile Number")
        </th>
        <th>
            @Html.DisplayName("Image")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Student_No)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mobile_No)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FileUpload)
    </td>
    <td>
        @Html.DisplayName("Active")
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
